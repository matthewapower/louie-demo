<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <link rel="stylesheet" href="https://use.typekit.net/qou3uek.css">
    <%= stylesheet_link_tag "all" %>
    <style>:root{--accent-color:<%= data.settings.accent_color %>;}</style>
    <script src="https://kit.fontawesome.com/6d76e6aba7.js"></script>
  </head>
  <body class="<%= 'alt-nav' if current_page.data.AltNav == true %>">
    <%= render_partial 'components/navbar' %>
    <main>
      <%= yield %>
      <%= render_partial 'components/footer' %>
    </main>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"%>
    <%= javascript_include_tag "site" %>
  </body>
</html>
